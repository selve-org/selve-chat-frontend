# SELVE Chatbot Frontend Environment Configuration Example
# Copy this file to .env.local and fill in your actual values

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# ==============================================================================
# BACKEND API CONFIGURATION
# ==============================================================================
NEXT_PUBLIC_API_URL=http://localhost:9000
NEXT_PUBLIC_API_TIMEOUT=60000

# ==============================================================================
# CLERK AUTHENTICATION
# ==============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/chat
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/chat

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================
NEXT_PUBLIC_APP_NAME="SELVE Chat"
NEXT_PUBLIC_APP_URL=http://localhost:4000
NEXT_PUBLIC_APP_DESCRIPTION="Personality-focused AI chatbot powered by SELVE"

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
NEXT_PUBLIC_ENABLE_STREAMING=true
NEXT_PUBLIC_ENABLE_MARKDOWN=true
NEXT_PUBLIC_ENABLE_CODE_HIGHLIGHTING=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_SESSION_HISTORY=true
NEXT_PUBLIC_ENABLE_EXPORT_CONVERSATION=true
NEXT_PUBLIC_ENABLE_VOICE_INPUT=false
NEXT_PUBLIC_ENABLE_IMAGE_UPLOAD=false
NEXT_PUBLIC_ENABLE_ASSESSMENT_INTEGRATION=true

# ==============================================================================
# UI CONFIGURATION
# ==============================================================================
NEXT_PUBLIC_BRAND_COLOR=#8B5CF6
NEXT_PUBLIC_LOGO_URL=/logo.png
NEXT_PUBLIC_MAX_MESSAGE_LENGTH=2000
NEXT_PUBLIC_MESSAGES_PER_PAGE=50
NEXT_PUBLIC_TYPING_INDICATOR_DELAY=300

# ==============================================================================
# ANALYTICS & MONITORING
# ==============================================================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ==============================================================================
# ERROR TRACKING
# ==============================================================================
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# ==============================================================================
# DEVELOPMENT / DEBUGGING
# ==============================================================================
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
NEXT_PUBLIC_LOG_LEVEL=info
